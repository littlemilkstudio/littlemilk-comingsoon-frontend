{
  "parser" : "babel-eslint",
  "extends" : [
    "standard",
    "plugin:react/recommended"
  ], 
  "plugins" : [
  	"babel",
    "jest",
    "promise",
  	"react"
  ],
  "env" : {
  	"browser" : true,
    "jest" : true
  },
  "globals"  : {
  	"__DEV__"  : false,
  	"__PROD__" : false,
  	"__TEST__" : false
  },
  "rules" : {
    "comma-dangle" : "error",
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "key-spacing" : ["error", {
      "align" : {
        "beforeColon" : true,
        "afterColon"  : true
      }
    }], 
    "max-len" : ["error", {
        "code"     : 80, 
        "tabWidth" : 2,
        "ignoreComments" : true,
        "ignoreUrls" : true,
        "ignoreStrings" : true,
        "ignoreTemplateLiterals" : true
    }],
    "object-curly-spacing" : ["error", "always"]
  }
} 